{
  "name": "backend-app-neuralcontent",
  "version": "1.0.0",
  "description": "Backend API for NeuralContent platform - RESTful API with NestJS modular architecture",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "dev": "nest start --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "migration:generate": "npm run build && npx typeorm migration:generate -d dist/database/data-source.js",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/database/data-source.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d dist/database/data-source.js",
    "migration:show": "npm run build && npx typeorm migration:show -d dist/database/data-source.js",
    "schema:sync": "npm run build && npx typeorm schema:sync -d dist/database/data-source.js",
    "schema:drop": "npm run build && npx typeorm schema:drop -d dist/database/data-source.js",
    "seed:run": "npm run build && node dist/database/seeds/run-seeds.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:stop": "pm2 stop neuralcontent-api",
    "pm2:restart": "pm2 restart neuralcontent-api",
    "pm2:reload": "pm2 reload neuralcontent-api",
    "pm2:delete": "pm2 delete neuralcontent-api",
    "pm2:logs": "pm2 logs neuralcontent-api",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy:build": "npm run build && npm run migration:run",
    "deploy:prod": "npm run deploy:build && npm run pm2:start",
    "deploy:dev": "npm run deploy:build && npm run pm2:dev"
  },
  "keywords": [
    "nodejs",
    "nestjs",
    "typescript",
    "typeorm",
    "mysql",
    "redis",
    "jwt",
    "pm2",
    "swagger",
    "api",
    "neuralcontent"
  ],
  "author": "NeuralContent Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.7.0",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.6.11",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.33.1",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hernanegoncalvesmk/backend-app-neuralcontent.git"
  },
  "bugs": {
    "url": "https://github.com/hernanegoncalvesmk/backend-app-neuralcontent/issues"
  },
  "homepage": "https://github.com/hernanegoncalvesmk/backend-app-neuralcontent#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "rootDir": ".",
    "testMatch": [
      "**/tests/**/*.spec.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@models/(.*)$": "<rootDir>/src/models/$1",
      "^@config/(.*)$": "<rootDir>/src/config/$1",
      "^@database/(.*)$": "<rootDir>/src/database/$1"
    }
  }
}
